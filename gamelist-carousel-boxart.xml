<theme>

   <!--   ///   Gamelist View: Carousel Boxart   ///   -->

      <include>./_inc/coversize-boxart-carousel-variables/${systemCoverSize}.xml</include>

      <view name="gamelist">
         <image name="system-logo-main">
            <origin>0.5 0.5</origin>
               <pos>0.5 0.06</pos>
               <opacity>1</opacity>
               <maxSize>0.29 0.09</maxSize>
         </image>
         <image name="system-logo-shadow">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.065</pos>
               <maxSize>0.29 0.09</maxSize>
         </image>
         <image name="blur-top">
               <opacity>0</opacity>
            </image>
         <carousel name="gamelistCarousel">
               <type>horizontal</type>
               <origin>0.5 1</origin>
               <pos>0.5 0.93</pos>
               <size>1 0.7</size>
               <imageType>cover</imageType>
               <itemSize>${carousel-base-item-w} 0.55</itemSize>
               <fontSize>${base-font-size}</fontSize>
               <maxItemCount>${carousel-item-count}</maxItemCount>
               <imageInterpolation>linear</imageInterpolation>
               <itemHorizontalAlignment>center</itemHorizontalAlignment>
               <itemVerticalAlignment>bottom</itemVerticalAlignment>
               <fastScrolling>true</fastScrolling>
               <color>00000000</color>
               <textColor>${systemInfoColor}</textColor>
               <letterCase>uppercase</letterCase>
               <lineSpacing>1.2</lineSpacing>
               <unfocusedItemOpacity>1</unfocusedItemOpacity>
               <unfocusedItemDimming>0.7</unfocusedItemDimming>
               <itemScale>${carousel-scale}</itemScale>        
               <zIndex>6</zIndex>
               <selectedItemMargins>${carousel-item-margins}</selectedItemMargins>
               <imageCornerRadius>0.005</imageCornerRadius>
         </carousel>   
      <clock name="clock">
            <pos>0.016 0.01</pos>
            <fontPath>${fontBold}</fontPath>
            <fontSize>${gamelist-font-size}</fontSize>
            <color>${systemInfoColor}</color>
         </clock>
         <systemstatus name="systemstatus">
            <pos>0.984 0.01</pos>
            <fontPath>${fontBold}</fontPath>
            <height>${gamelist-font-size}</height>
            <color>${systemInfoColor}</color>
      </systemstatus>   

      <!--  Metadata  -->
         <image name="game-image">
            <cropSize>1 1</cropSize>
            <cropPos>0.5 1</cropPos>
            <origin>0.5 1</origin>
            <pos>0.5 ${dg-grid-h}</pos>
            <imageType>screenshot</imageType>
            <visible>true</visible>
            <zIndex>3</zIndex>
            <brightness>-1</brightness>
            <saturation>0.4</saturation>
         </image>
         <video name="game-video">
            <delay>2.5</delay>
            <fadeInTime>0.25</fadeInTime>
            <cropPos>0.5 1</cropPos>
            <pos>0.5 ${dg-grid-h}</pos>
               <zIndex>7</zIndex>
               <cropSize>1 ${dg-grid-h}</cropSize>
         </video> 
         <badges name="badges">
            <origin>0.5 0</origin>
            <pos>0.5 0.1825</pos>
            <horizontalAlignment>center</horizontalAlignment>
            <size>1 ${base-font-size}</size>  
               <zIndex>6</zIndex>
               <badgeIconColor>ffffff</badgeIconColor>
         </badges>
         <text name="game-name">
            <size>0.95 ${base-font-size}</size>
            <pos>0.5 0.14</pos>
            <fontSize>${base-font-size}</fontSize>     
            <origin>0.5 0.5</origin>
            <fontPath>${fontBold}</fontPath>
            <color>ffffff</color>
            <lineSpacing>1.5</lineSpacing>
            <defaultValue>Unknown</defaultValue>
            <fontSize>${base-font-size}</fontSize>
            <metadata>name</metadata>
            <container>true</container>
            <containerType>horizontal</containerType>
            <horizontalAlignment>center</horizontalAlignment>
         </text>
         <text name="game-name-shadow">
            <size>0.95 ${base-font-size}</size>
            <pos>0.502 0.143</pos>
            <fontSize>${base-font-size}</fontSize>     
            <origin>0.5 0.5</origin>
            <fontPath>${fontBold}</fontPath>
            <color>000000</color>
            <lineSpacing>1.5</lineSpacing>
            <defaultValue>Unknown</defaultValue>
            <fontSize>${base-font-size}</fontSize>
            <metadata>name</metadata>
            <container>true</container>
            <containerType>horizontal</containerType>
            <horizontalAlignment>center</horizontalAlignment>
            <opacity>0.4</opacity>
               <zIndex>8</zIndex>
         </text>
      </view>
</theme>
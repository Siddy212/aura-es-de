<theme>
      <variables>
         <systemlogoArtPath>./_inc/system-logo/${system.theme}.svg</systemlogoArtPath>
      </variables>


   <colorScheme name="art-light-glass,art-dark-glass,art-purple,art-blue,art-green,art-orange,art-black,art-colorful">
         <variables>
            <carouselArtPath>./_inc/default-art/${system.theme}/${system.theme}</carouselArtPath>
            <gridImagePath>./_inc/default-art/${system.theme}/${system.theme}</gridImagePath>
            <selectorImagePath>./_inc/coversize-selector/system-art.webp</selectorImagePath>
         </variables>
   </colorScheme>   
   <colorScheme name="logo-purple,logo-blue,logo-green,logo-orange,logo-black,logo-colorful">
         <variables>
            <carouselArtPath>./_inc/controllers/${system.theme}</carouselArtPath>
            <gridImagePath>./_inc/controllers/${system.theme}</gridImagePath>
            <selectorImagePath>./_inc/coversize-selector/system-controller.webp</selectorImagePath>
         </variables>
   </colorScheme>



   <colorScheme name="art-purple,logo-purple">
         <variables>
            <wallpaper>purple</wallpaper>      
         </variables>
   </colorScheme>
   <colorScheme name="art-blue,logo-blue">
         <variables>
            <wallpaper>blue</wallpaper>      
         </variables>
   </colorScheme>
   <colorScheme name="art-orange,logo-orange">
         <variables>
            <wallpaper>orange</wallpaper>      
         </variables>
   </colorScheme>
   <colorScheme name="art-green,logo-green">
         <variables>
            <wallpaper>green</wallpaper>      
         </variables>
   </colorScheme>
   <colorScheme name="art-black,logo-black">
         <variables>
            <wallpaper>black</wallpaper>      
         </variables>
   </colorScheme>
   <colorScheme name="art-colorful,logo-colorful">
         <variables>
            <wallpaper>colorful</wallpaper>      
         </variables>
   </colorScheme>



   <colorScheme name="art-light-glass,art-dark-glass">
      <variables>
         <systemBackgroundPath>./_inc/default-art/${system.theme}/${system.theme}-blur-full-no-char</systemBackgroundPath>
         <gamelistBackgroundPath>./_inc/default-art/${system.theme}/${system.theme}-clear-full-w-char</gamelistBackgroundPath>
         <gamelistBlurStripPath>./_inc/default-art/${system.theme}/${system.theme}-blur-strip-w-char</gamelistBlurStripPath>
         <gamelistBlurFullPath>./_inc/default-art/${system.theme}/${system.theme}-blur-full-w-char</gamelistBlurFullPath>
         <gradientSwitch>true</gradientSwitch>
         <backgroundBrightness>-0.5</backgroundBrightness>
         <fullscreen-style>system-fullscreen-art-glass</fullscreen-style>
      </variables>
   </colorScheme>       
   <colorScheme name="art-purple,art-blue,art-orange,art-green,art-black,art-colorful">
      <variables>
         <systemBackgroundPath>./_inc/wallpaper/${wallpaper}/${wallpaper}</systemBackgroundPath>
         <gamelistBackgroundPath>./_inc/default-art/${system.theme}/${system.theme}-clear-full-w-char</gamelistBackgroundPath>
         <gamelistBlurStripPath>./_inc/default-art/${system.theme}/${system.theme}-blur-strip-w-char</gamelistBlurStripPath>
         <gamelistBlurFullPath>./_inc/default-art/${system.theme}/${system.theme}-blur-full-w-char</gamelistBlurFullPath>
         <gradientSwitch>false</gradientSwitch>
         <backgroundBrightness>0</backgroundBrightness>
         <fullscreen-style>system-fullscreen-art-wallpaper</fullscreen-style>
      </variables>
   </colorScheme>     
   <colorScheme name="logo-purple,logo-blue,logo-green,logo-orange,logo-black,logo-colorful">
      <variables>
         <systemBackgroundPath>./_inc/wallpaper/${wallpaper}/${wallpaper}</systemBackgroundPath>
         <gamelistBackgroundPath>./_inc/wallpaper/${wallpaper}/${wallpaper}</gamelistBackgroundPath>
         <gamelistBlurStripPath>./_inc/wallpaper/${wallpaper}/${wallpaper}-blur-strip</gamelistBlurStripPath>
         <gamelistBlurFullPath>./_inc/wallpaper/${wallpaper}/${wallpaper}-blur-full</gamelistBlurFullPath>
         <gradientSwitch>false</gradientSwitch>
         <backgroundBrightness>0</backgroundBrightness>
         <fullscreen-style>system-fullscreen-logo</fullscreen-style>
      </variables>
   </colorScheme>    

   
   <!--     Light Color Schemes     -->
   <colorScheme name="art-light-glass,art-blue,logo-blue,art-orange,logo-orange,art-colorful,logo-colorful">
      <variables>
         <helpTextColor>FFFFFF</helpTextColor>
         <backgroundColor>373737</backgroundColor>
         <systemInfoColor>FFFFFF</systemInfoColor>
         <systemCarouselTextBackgroundColor>00000000</systemCarouselTextBackgroundColor>
         <gridSelectorColor>FFFFFF</gridSelectorColor>
         <gamelistBackgroundOpacity>0.8</gamelistBackgroundOpacity>
         <gamelistSelectorColor>222222</gamelistSelectorColor>
         <gamelistSelectedColor>ffffff</gamelistSelectedColor>
         <gamelistPrimaryColor>222222</gamelistPrimaryColor>
         <gameMetadataColor>222222</gameMetadataColor>
         <BadgeColor>222222</BadgeColor>
         <rowBadgeColor>000000</rowBadgeColor>
         <gridNameColor>555555</gridNameColor>
         <shade>light</shade>
         <brightnessfactor>0.2</brightnessfactor>
         <brightnessfactorlarge>0.6</brightnessfactorlarge>
      </variables>
   </colorScheme>    

   <!--     Dark Color Schemes     -->
   <colorScheme name="art-dark-glass,art-purple,logo-purple,art-green,logo-green">
      <variables>
         <helpTextColor>FFFFFF</helpTextColor>
         <backgroundColor>000000</backgroundColor>
         <systemInfoColor>FFFFFF</systemInfoColor>
         <systemCarouselTextBackgroundColor>00000000</systemCarouselTextBackgroundColor>
         <gridSelectorColor>000000</gridSelectorColor>
         <gamelistBackgroundOpacity>0.8</gamelistBackgroundOpacity>
         <gamelistSelectorColor>000000</gamelistSelectorColor>
         <gamelistSelectedColor>ffffff</gamelistSelectedColor>
         <gamelistPrimaryColor>FFFFFF</gamelistPrimaryColor>
         <gameMetadataColor>FFFFFF</gameMetadataColor>
         <BadgeColor>FFFFFF</BadgeColor>
         <rowBadgeColor>FFFFFF</rowBadgeColor>
         <gridNameColor>555555</gridNameColor>
         <shade>dark</shade>
         <brightnessfactor>-0.2</brightnessfactor>
         <brightnessfactorlarge>-0.6</brightnessfactorlarge>
      </variables>
   </colorScheme>  
   
   <colorScheme name="art-black,logo-black">
      <variables>
         <helpTextColor>FFFFFF</helpTextColor>
         <backgroundColor>000000</backgroundColor>
         <systemInfoColor>FFFFFF</systemInfoColor>
         <systemCarouselTextBackgroundColor>00000000</systemCarouselTextBackgroundColor>
         <gridSelectorColor>000000</gridSelectorColor>
         <gamelistBackgroundOpacity>0.8</gamelistBackgroundOpacity>
         <gamelistSelectorColor>222222</gamelistSelectorColor>
         <gamelistSelectedColor>ffffff</gamelistSelectedColor>
         <gamelistPrimaryColor>FFFFFF</gamelistPrimaryColor>
         <gameMetadataColor>FFFFFF</gameMetadataColor>
         <BadgeColor>FFFFFF</BadgeColor>
         <rowBadgeColor>FFFFFF</rowBadgeColor>
         <gridNameColor>555555</gridNameColor>
         <shade>dark</shade>
         <brightnessfactor>0</brightnessfactor>
         <brightnessfactorlarge>-0.2</brightnessfactorlarge>
      </variables>
   </colorScheme>  
</theme>
